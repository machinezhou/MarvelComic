<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <com.zhou.lawson.marvelcomics.views.refresh.ArcView
      android:id="@+id/arc_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/comic_detail_image_height"/>

  <com.zhou.lawson.marvelcomics.views.single.TypefaceTextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/large_space"
      android:paddingRight="@dimen/large_space"
      android:paddingBottom="@dimen/large_space"
      android:textColor="@color/defaultTextColor"
      android:textAllCaps="true"
      android:textSize="@dimen/text_medium_x"
      android:gravity="start|center_vertical"
      android:background="@color/colorPrimary"
  />

  <com.zhou.lawson.marvelcomics.views.single.TypefaceTextView
      android:id="@+id/time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/large_space"
      android:paddingRight="@dimen/large_space"
      android:paddingBottom="@dimen/large_space"
      android:textColor="@color/defaultTextColor"
      android:textAllCaps="true"
      android:textSize="@dimen/text_medium_x"
      android:gravity="start|center_vertical"
      android:background="@color/colorPrimary"
  />
  <com.zhou.lawson.marvelcomics.views.single.TypefaceTextView
      android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/large_space"
      android:textColor="@color/defaultTextColor"
      android:textSize="@dimen/text_small"
      android:gravity="start|center_vertical"
      android:background="@color/colorPrimary"
  />

</LinearLayout>