<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comic_item_height"
    android:foreground="?attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/windowBackground"
    app:cardCornerRadius="@dimen/small_space"
    app:cardElevation="@dimen/small_space"
    app:contentPadding="@dimen/small_space"
>
  <ImageView
      android:id="@+id/thumbnail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>

  <com.zhou.lawson.marvelcomics.views.single.TypefaceTextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/large_space"
      android:textColor="@color/defaultTextColor"
      android:textAllCaps="true"
      android:textSize="@dimen/text_medium_x"
      android:gravity="bottom|start"
      android:background="#33000000"
  />
  <ImageView
      android:src="@drawable/layout_item_indicator"
      android:scaleType="centerCrop"
      android:layout_margin="@dimen/large_space"
      android:layout_gravity="bottom|end"
      android:layout_width="45dp"
      android:layout_height="50dp"/>

</android.support.v7.widget.CardView>